#:kivy 2.1.0

<Password>
    orientation: 'vertical'
    size_hint_y: None
    height: password.height

    MDTextField:
        id: password
        mode: 'round'
        hint_text: "Пароль"
        password: True
        icon_left: "key-variant"


    MDIconButton:
        icon: "eye-off"
        pos_hint: {"center_y": .5}
        pos: password.width - self.width + dp(8), 0
        theme_text_color: "Hint"
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            password.password = False if password.password is True else True    
            

MDScreen:
    MDBoxLayout:
        size_hint: None, None
        size: 300, 500
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        elevation: '10dp'
        padding: '25dp'
        spacing: '25dp'
        orientation: 'vertical'

        Image:       
            source:"data/images/login.png"
            size_hint_y: None
            height:"100dp"

        MDLabel:
            id: welcome_label
            text: 'Авторизация'
            font_size: '40dp'
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextField:
            id: user
            mode: 'round'
            hint_text: 'Имя пользователя'
            icon_right: 'account'
            size_hint_x: None
            pos_hint: {"center_x": .5}
            width: "300dp"
            padding: 10
            

        Password:
            id: passw
            size_hint_x: None
            width: "300dp"
            pos_hint: {"center_x": .5}

        MDRoundFlatButton:
            size_hint: None,None
            size_hint_x: 1
            height:'58dp'
            text:'Войти'
            font_size:'24dp'
            on_press: app.sign_in()

        MDBoxLayout:
            orientation:'horizontal'

            MDLabel:
                text:'Нет аккаунта?'
                font_size:'14dp'
                halign: 'center'
                
            MDTextButton:
                text:'Регистрация'
                font_size:'16dp'
                size_hint_x: 1
                padding_y: 8
                color: 'red'
                on_press: app.registration()